---
import { Icon } from "astro-icon";
import { type IconProps } from "../types/icon-props";

const { icons } = Astro.props as { icons: IconProps[] };
---

<div class="flex flex-col justify-center space-y-3">
  {
    icons.map((icon: IconProps) => (
      <a
        class="btn flex justify-start rounded-3xl"
        href={icon.link}
        target="_blank"
      >
        <Icon
          class:list={[icon.width, icon.height, icon.color]}
          pack="mdi"
          name={icon.name}
        />
        <div class="flex items-center normal-case">{icon.label}</div>
      </a>
    ))
  }
</div>
