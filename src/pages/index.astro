---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import IconGroup from "../components/IconGroup.astro";
import CodeEditor from "../components/CodeEditor.astro";

// images
import me from "../assets/images/me.png";
import type { IconProps } from "../types/icon-props";

const icons: IconProps[] = [
  {
    name: "linkedin",
    width: "w-10",
    height: "h-10",
    color: "text-blue-600",
    link: "https://www.linkedin.com/in/kyosuke-konishi",
    label: "kyosuke-konishi",
  },
  {
    name: "twitter",
    width: "w-10",
    height: "h-10",
    color: "text-blue-400",
    link: "https://twitter.com/_konippi_",
    label: "_konippi_",
  },
  {
    name: "github",
    width: "w-10",
    height: "h-10",
    color: "text-grey-900",
    link: "https://github.com/Konippi",
    label: "Konippi",
  },
];
---

<Layout title="Home">
  <div id="main-container" class="grid grid-cols-5">
    <div class="col-span-2 flex flex-col items-center">
      <div id="avatar-container" class="w-64 p-3">
        <Image
          src={me}
          alt="me"
          class="rounded-full ring ring-offset-4 ring-offset-slate-400 ring-slate-400"
        />
      </div>
      <h1 class="text-center mb-5 text-3xl font-bold">Kyosuke Konishi</h1>
      <IconGroup icons={icons} />
    </div>
    <div class="col-span-3">
      <CodeEditor />
    </div>
  </div>

  <style>
    @media screen and (max-width: 800px) {
      #main-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>
